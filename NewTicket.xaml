<Window x:Class="TicketSystem.NewTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Ticket" Height="500" Width="700"
        Background="#F0F0F0">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="10" Margin="20">
            <StackPanel>
                <TextBlock Text="Create New Ticket" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" />

                <TextBlock Text="Issue:" FontSize="16" Foreground="#E74C3C" />
                <TextBox Height="30" Margin="0,5,0,10" Text="Enter issue description..." Foreground="Gray"/>

                <TextBlock Text="Priority:" FontSize="16" Foreground="#F39C12" />
                <ComboBox Height="30" Margin="0,5,0,10">
                    <ComboBoxItem Content="Prio 3" IsSelected="True"/>
                    <ComboBoxItem Content="Prio 2"/>
                    <ComboBoxItem Content="Prio 1"/>
                </ComboBox>

                <TextBlock Text="Description:" FontSize="16" Foreground="#555555" />
                <TextBox Height="120" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" Foreground="Gray"
                         Margin="0,5,0,10" Text="Enter detailed description..." />

                <!-- Knapp för att skapa ticket -->
                <Button Content="Create Ticket" Width="150" Height="40" Background="#3498DB" 
                        Foreground="White" Padding="5" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
